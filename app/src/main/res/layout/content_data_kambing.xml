<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".dataKambing"
    tools:showIn="@layout/activity_data_kambing">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="5dp"
        android:background="#fff"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/et_cariKambing"
            android:background="#fff"
            android:layout_width="wrap_content"
            android:hint="Cari Berdasarkan Id Kambing"
            android:fontFamily="casual"
            android:textAlignment="center"
            android:padding="10dp"
            android:layout_weight="2"
            android:layout_height="wrap_content" />
        <ImageButton
            android:id="@+id/btn_cariKambing"
            android:src="@drawable/ic_cari"
            android:background="#fff"
            android:layout_width="50dp"
            android:layout_height="50dp" />
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_kambing"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>

</LinearLayout>